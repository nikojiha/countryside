<div class="container my-5">
  <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5"><%= @customer.name %>さんのページ</h1>
  </div>
  
  <div class="row justify-content-center">
    <% if @customer.profile_image.attached? %>
      <%= image_tag @customer.profile_image %>
    <% end %>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-4">
    <%= @customer.introduction %><br>
    <%= @customer.email %>
    </div>
  </div>
  
  
  <div class="row">
    <% @post.each do |post| %>
      <div class="col-3" >
        <h5>画像</h5>
          <% post.images.each do |image| %>
            <%= image_tag(image, width:100) %>
          <% end %>
        <p class="caption h4"><%= post.location %></p>
        <h5>レビュー</h5>
        <p class="caption h6"><%= post.post_comment %></p>
       <%= link_to '詳細',  admin_post_path(post), class: 'btn btn-info mt-2'%>
      </div>
    <% end %>
  </div>
</div>

