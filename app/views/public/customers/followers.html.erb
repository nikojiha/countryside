<div class="cover-customer-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @customers.each do |customer| %>
      <div class="one-post card w-100">
        <%= link_to customer_path(customer) do %>
        <p class="caption h4"><%= customer.name %></p>
        <div class="d-flex">
          <%= attachment_image_tag @customer, :profile_image, size: '50x50', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
          <h4 class="ml-5"><%= customer.profile %></h4>
        </div>
        <p class="caption"><%= "#{customer.posts.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @customers %>
  </div>
</div>