<div class="post-partial">
  <div class="row">
    <% post.each do |post| %>
      <div class="col-md-3">
        <h5>ユーザー</h5>
          <h4><%= link_to post.customer.name, customer_path(post.customer) %></h4>
          <%= render "show", post: post %>
          <%= link_to '詳細',  post_path(post), class: 'btn btn-info mt-2'%>
      </div>
    <% end %>
  </div>
</div>