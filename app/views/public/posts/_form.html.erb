  <%= form_with model: @post, url: "/posts/#{@post.id}", local:true do |f| %>
    <div>
      <%= f.label :images, '画像' %><br>
      <%= f.file_field :images, multiple: true %>
    </div>
    <h4>タグ</h4>
      <%= f.select :tag_id, options_from_collection_for_select(Tag.all, :id, :name),include_blank: "--選択して下さい--" %>
    <h4>旅行先</h4>
      <%= f.text_field :location %>
    <h4>評価</h4>
      <div class="form-group row ml-2" id="star">
        <%= f.hidden_field :star, id: :review_star %>
      </div>


    <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post[star]',
        half: true,
      });
    </script>

    <h4>レビュー</h4>
      <%= f.text_area :post_comment, :size=>"60x10" %><br>
        <% if f.object.new_record? %>
          <%= f.submit "投稿する" %>
        <% else %>
          <%= f.submit "変更を保存" %>
      <% end %>
<% end %>